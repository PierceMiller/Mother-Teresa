<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Topics_Home"
    android:background="@drawable/wallpaper"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/image_view_slider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_quote"/>

    <Button
        android:id="@+id/Topic1"
        android:layout_width="375dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableRight="@drawable/baseline_android_white_18dp"
        android:onClick="Topic1"
        android:text="@string/Babies" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topicsimage">

        <ListView
            android:id="@+id/thelist"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:itemIconTint="#4682B3"
        app:itemTextColor="#4682B3"
        app:menu="@menu/main_menu">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>

