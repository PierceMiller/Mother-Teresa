<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".Topic_Babies">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="259dp">

                <TextView
                    android:id="@+id/Baby_Title"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="1dp"
                    android:gravity="center"
                    android:text="Parenting Babies"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#4682B3" />

                <ImageView
                    android:id="@+id/topicsimage"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Baby_Title"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:color/background_dark" />

                <TextView
                    android:id="@+id/Babies_Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topicsimage"
                    android:layout_centerHorizontal="true"
                    android:text="Babies"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="#4682B3" />

                <TextView
                    android:id="@+id/Feeding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="305dp"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="Dietary requirements"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/Four_months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Feeding"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="0 to 4 months old:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/Four_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Four_months"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="0 to 4 months old info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/six_months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Four_info"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="4 to 6 months:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/six_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/six_months"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="4 to 6 months old info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/eight_months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/six_info"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="6 to 8 months old:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/eight_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/eight_months"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="6 to 8 months old info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/ten_months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/eight_info"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="8 to 10 months old:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/ten_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ten_months"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="8 to 10 months old info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/twelve_months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/ten_info"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="10 to 12 months old:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/twelve_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/twelve_months"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="10 to 12 months old info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/sleep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/twelve_info"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="Sleeping Requirements:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/sleep_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/sleep"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="sleep info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/Bathing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/sleep_info"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="Bathing Requirements:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="#4682B3"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/bathing_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Bathing"
                    android:background="@android:color/background_light"
                    android:gravity="left"
                    android:text="bathing info"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="308dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>